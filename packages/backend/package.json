{
  "name": "@smart-real-estate/backend",
  "version": "1.0.0",
  "private": true,
  "description": "스마트 부동산 시트 백엔드 API 서버 (Node.js/Express)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.json",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "db:drop": "sequelize-cli db:drop",
    "db:create": "sequelize-cli db:create",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js src/routes/*.ts -o swagger.json",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "express": "^4.18.0",
    "typescript": "^5.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.0",
    "sequelize": "^6.35.0",
    "mysql2": "^3.6.0",
    "mongoose": "^7.6.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-kakao": "^1.0.1",
    "passport-naver-v2": "^2.0.8",
    "passport-google-oauth20": "^2.0.0",
    "joi": "^17.11.0",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.0",
    "node-cron": "^3.0.2",
    "bull": "^4.12.0",
    "ioredis": "^5.3.0",
    "axios": "^1.6.0",
    "xml2js": "^0.6.2",
    "date-fns": "^2.30.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.0",
    "nodemailer": "^6.9.0",
    "firebase-admin": "^11.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-async-errors": "^3.1.1",
    "@smart-real-estate/types": "workspace:*",
    "@smart-real-estate/common-utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/morgan": "^1.9.0",
    "@types/compression": "^1.7.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.0",
    "@types/passport-kakao": "^1.0.0",
    "@types/passport-google-oauth20": "^2.0.0",
    "@types/node-cron": "^3.0.0",
    "@types/multer": "^1.4.0",
    "@types/xml2js": "^0.4.0",
    "@types/nodemailer": "^6.4.0",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0",
    "sequelize-cli": "^6.6.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts",
      "!src/config/**"
    ]
  }
} 